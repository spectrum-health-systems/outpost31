    <!-- ======================================================================
    RuntimeConfig.cs
    ======================================================================= -->
    <Class name="RuntimeConfig">

        <!-- RuntimeConfig.cs -->
        <RuntimeConfig>
            <remarks>
                <para>
                    This class is used to set the runtime configurations for the Tingen Web Service.
                </para>
            </remarks>
            <seealso href="https://github.com/spectrum-health-systems/Tingen-Documentation">Tingen documentation</seealso>
        </RuntimeConfig>

        <!-- RuntimeConfig.Properties.cs - Dictionary <string,string> RequiredDirectories -->
        <RequiredDirectories>
            <remarks>
                <para>
                    Directories are locations on the file system where files and folders are stored.
                </para>
                <para>
                    The Tingen Web Service requires the following directories to be present in the <c>./AppData</c> directory:
                    <list type="bullet">
                        <item>
                            <term>Runtime</term>
                            <description>Runtime data.</description>
                        </item>
                    </list>
                </para>
            </remarks>
        </RequiredDirectories>

        <!-- RuntimeConfig.Properties.cs - Dictionary <string,string> RequiredFiles -->
        <RequiredFiles>
            <remarks>
                <para>
                    The Tingen Web Service requires the following files to be present in the <c>./AppData/Runtime</c> directory:
                    <list type="bullet">
                        <item>
                            <term>tngn.build</term>
                            <description>The Tingen Web Service build information.</description>
                        </item>
                        <item>
                            <term>tngn.mode</term>
                            <description>The Tingen Web Service mode.</description>
                        </item>
                        <item>
                            <term>tngn.systemcode</term>
                            <description>The Avatar System Code that the Tingen Web Service will interface with.</description>
                        </item>
                    </list>
                </para>
            </remarks>
        </RequiredFiles>

        <!-- RuntimeConfig.Properties.cs - List<string> ValidSystemCodes -->
        <ValidSystemCodes>
            <remarks>
                <para>
                    The Tingen Web Service will only interface with the following Avatar System Codes:
                    <list type="bullet">
                        <item>
                            <term>LIVE</term>
                            <description>The Avatar production environment</description>
                        </item>
                        <item>
                            <term>UAT</term>
                            <description>The Avatar testing environment</description>
                        </item>
                    </list>
                </para>
            </remarks>
        </ValidSystemCodes>

        <!-- RuntimeConfig.Properties.cs - List<string> ValidTngnModes -->
        <ValidTngnModes>
            <remarks>
                <para>
                    The Tingen Web Service can have one of the following modes:
                    <list type="bullet">
                        <item>
                            <term>DISABLED</term>
                            <description>The Tingen Web Service does not do any work.</description>
                        </item>
                        <item>
                            <term>ENABLED</term>
                            <description>The Tingen Web Service functions normally.</description>
                        </item>
                        <item>
                            <term>PASSTHROUGH</term>
                            <description>The Tingen Web Service writes log files, but does not make any modifications to data.</description>
                        </item>
                    </list>
                </para>
            </remarks>
        </ValidTngnModes>

        <!-- RuntimeConfig.cs - Verify() -->
        <Verify>
            <remarks>
                <para>
                    All of the Config must be valid before the Tingen Web Service can start.<br/>
                    <br/>

                    <list type="bullet">
                        <item>The Tingen Web Service mode</item>
                        <item>The Avatar System Code</item>
                        <item>The Tingen Web Service build</item>
                    </list>
                </para>
            </remarks>
        </Verify>

        <!-- RuntimeConfig.cs - Load() -->
        <Load>
            <remarks>
                <!-- No additional XML documentation -->
            </remarks>
        </Load>

    </Class>

