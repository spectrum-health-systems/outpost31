<Core.Avatar>

    <!-- ======================================================================
    SystemCode.cs
    ======================================================================= -->  
    <Class name="SystemCode">
        
        <!-- SystemCode.cs -->
        <SystemCode>
          <remarks>
            <para>
                Avatar uses a <c>SystemCode</c> that indicates its environment. While there are many possible values for this code, the<br/>
                Tingen Web Service only uses two: <c>LIVE</c> and <c>UAT</c>.<br/>
            </para>
          </remarks>
            <seealso href="https://github.com/spectrum-health-systems/Tingen-Documentation">Tingen documentation</seealso>
        </SystemCode>
        
        <!-- GetSystemCode() -->
        <GetSystemCode>
            <remarks>
                <para>
                    The Tingen Web Service determines which Avatar System Code it will use by reading the contents of the
                    <c>./AppData/Runtime/system.code</c> file.<br/>
                    <br/>
                    This file should contain a single line of text with one of the following values:
                    <list type="bullet">
                        <item>LIVE</item>
                        <item>UAT</item>
                    </list>
                </para>
            </remarks>
        </GetSystemCode>
    
    </Class>
    
</Core.Avatar>